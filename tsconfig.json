{
	"compilerOptions": {
	  "jsx": "react-jsx",                       // Use react-jsx for the new JSX transform
	  "strict": true,
	  "target": "ES6",
	  "module": "commonjs",
	  "moduleResolution": "Node",
	  "lib": [
		"dom",
		"esnext"                                // Keep esnext and dom for web support
	  ],
	  "noEmit": true,
	  "allowSyntheticDefaultImports": true,
	  "skipLibCheck": true,
	  "resolveJsonModule": true,
	  "baseUrl": ".",
	  "paths": {
		"@/*": [
		  "./src/*"
		],
		"@/assets/*": [
		  "./assets/*"
		]
	  }
	},
	"include": [
	  "**/*.ts",
	  "**/*.tsx",
	  ".expo/types/**/*.ts",
	  "expo-env.d.ts"
	],
	"exclude": [
	  "node_modules"
	],
	"extends": "expo/tsconfig.base"
  }
  